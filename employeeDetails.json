{
  "swagger": "2.0",
  "info": {
    "title": "Employee API",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "url": "http://www.example.com/support",
      "email": "support@example.com"
    }
  },
  "host": "api.example.com",
  "basePath": "/v1",
  "schemes": [
    "https"
  ],
  "paths": {
    "/employees": {
      "get": {
        "operationId": "getEmployees",
        "summary": "Fetch a list of employees",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "type": "integer",
            "description": "Number of employees to return",
            "required": false
          },
          {
            "name": "after",
            "in": "query",
            "type": "string",
            "description": "Cursor for pagination",
            "required": false
          },
          {
            "name": "sort",
            "in": "query",
            "type": "string",
            "description": "Sort order for employees",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "A list of employees",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Employee"
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "403": {
            "description": "Forbidden",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "404": {
            "description": "Not Found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "429": {
            "description": "Too Many Requests",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/employees/{employeeId}": {
      "get": {
        "operationId": "getEmployeeById",
        "summary": "Fetch employee details by ID",
        "parameters": [
          {
            "name": "employeeId",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "ID of the employee to fetch"
          }
        ],
        "responses": {
          "200": {
            "description": "Employee details",
            "schema": {
              "$ref": "#/definitions/Employee"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "403": {
            "description": "Forbidden",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "404": {
            "description": "Not Found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Employee": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "position": {
          "type": "string"
        },
        "department": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "status": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "detail": {
          "type": "string"
        },
        "instance": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "OAuth2": {
      "type": "oauth2",
      "authorizationUrl": "https://api.example.com/oauth/authorize",
      "tokenUrl": "https://api.example.com/oauth/token",
      "flow": "accessCode",
      "scopes": {
        "read:employees": "Read employee details"
      }
    }
  },
  "security": [
    {
      "OAuth2": [
        "read:employees"
      ]
    }
  ]
}